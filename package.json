{
  "name": "threes",
  "version": "0.0.1",
  "description": "Easily create avatars from a username - Avatar as a Service",
  "main": "src/index.js",
  "scripts": {
    "dev": "DEBUG=threes:* node src/index.js",
    "start": "NODE_ENV=production node src/cli.js",
    "lint": "xo",
    "test": "ava",
    "coverage": "nyc ava -t",
    "check-duplicate-code": "jsinspect -t 20 src"
  },
  "keywords": [
    "avatar"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/AlexGustafsson/threes.git"
  },
  "author": "Alex Gustafsson",
  "license": "ISC",
  "devDependencies": {
    "ava": "^1.3.1",
    "jsinspect": "^0.12.7",
    "nyc": "^14.0.0",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "canvas": "^2.4.1",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "seedrandom": "^3.0.1"
  },
  "xo": {
    "space": 2,
    "esnext": true,
    "rules": {
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "unicorn/catch-error-name": [
        "error",
        {
          "name": "error"
        }
      ],
      "dot-notation": [
        "off"
      ],
      "quote-props": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "padding-line-between-statements": [
        "off"
      ]
    }
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "verbose": true,
    "compileEnhancements": false
  }
}
